{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "removeComments": true,
    "preserveConstEnums": true,
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "compileOnSave": true,
  "buildOnSave": true,


  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],


  "exclude": [
    "node_modules",
  ]
}
